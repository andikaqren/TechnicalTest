<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Core" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="RatingBar" parent="Theme.Core">
        <item name="colorControlNormal">@color/lightGrey</item>
        <item name="colorControlActivated">@color/duskYellow</item>
        <item name="android:stepSize">@color/duskYellow</item>
        <item name="android:rating">3</item>
        <item name="android:numStars">5</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="CardView.HomeProduct" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_gravity">center</item>
        <item name="cardCornerRadius">@dimen/_8sdp</item>
        <item name="cardElevation">@dimen/_8sdp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">@dimen/movies_size</item>
        <item name="android:layout_height">@dimen/movies_size</item>
        <item name="android:background">@color/colorPrimary</item>

    </style>

    <style name="CardView.HomeTopProduct" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginStart">@dimen/medium_margin</item>
        <item name="cardCornerRadius">@dimen/mini_medium_margin</item>

        <item name="cardElevation">@dimen/_8sdp</item>
    </style>

    <style name="TextView.HomeDetailTopProduct" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/indigo_900_light</item>
    </style>

    <style name="TextView.HomeStarProduct" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/mini_margin</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="TextView.HomeTitleTopProduct" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_margin">@dimen/mini_margin</item>
    </style>

    <style name="TextView.HomeDetailProduct" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:maxLength">30</item>
    </style>

    <style name="TextView.HomeTitleProduct" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
    </style>

    <style name="TextView.DetailDetail" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/mini_medium_margin</item>
    </style>

    <style name="TextView.DetailTitle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/mini_margin</item>
    </style>

    <style name="ImageView.HomePoster" parent="Theme.Core">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/movies_size_small</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ImageView.HomeTopPoster" parent="Theme.Core">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="TextView.BottomSheet" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/mini_margin</item>
        <item name="android:padding">@dimen/mini_margin</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">@dimen/mini_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ConstraintLayout.HomeProduct" parent="Theme.Core">
        <item name="android:layout_width">@dimen/movies_size_bonus</item>
        <item name="android:layout_height">@dimen/movies_size_bonus</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/mini_margin</item>

    </style>

    <style name="RecyclerView.Product" parent="Theme.Core">
        <item name="android:layout_marginTop">@dimen/mini_margin</item>
        <item name="android:layout_marginBottom">@dimen/mini_margin</item>
    </style>

    <style name="Fab.Simple" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_margin">@dimen/mini_medium_margin</item>
        <item name="android:layout_height">@dimen/movies_size_bonus</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>


    </style>
</resources>